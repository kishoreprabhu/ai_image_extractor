datasource db {
  provider = "postgresql"
}

generator client {
  provider = "prisma-client-js"
}

enum UploadStatus {
  EXTRACTING
  EXTRACTED
  FAILED
  INVALID
}

model UserUpload {
  id           String   @id @default(uuid())
  userId       String   @map("user_id")
  fileName     String   @map("file_name")
  fileType     String   @map("file_type")
  storagePath  String   @map("storage_path")
  publicUrl    String   @map("public_url")
  uploadedAt   DateTime @default(now()) @map("uploaded_at")
  status       UploadStatus @default(EXTRACTING)
  
  /** relations **/
  extraction   ReceiptExtraction?
  @@map("user_uploads")
}


model ReceiptExtraction {
  id           String   @id @default(uuid())
  uploadId     String   @unique @map("upload_id") 
  extractedJson Json    @map("extracted_json")
  createdAt    DateTime @default(now()) @map("created_at") 

  upload       UserUpload @relation(fields: [uploadId], references: [id], onDelete: Cascade)
  @@map("receipt_extraction")
}